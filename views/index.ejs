    <div class="parallax-container" id="inicio">
      <div class="parallax">
        <img
          src="https://images.pexels.com/photos/947914/pexels-photo-947914.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
        />
      </div>
    </div>
    <main>
      <!-- catalogo -->
      <div class="divider"></div>
      <div id="catalogo">
        <div class="container">
          <div class="section">
            <div class="row">
              <div class="col s12">
                <div class="section">
                  <div class="col s12">
                    <span class="title pink-text text-accent-1">Catálogo</span>
                  </div>
                  <% arrayProducts.forEach(function(product) { %>
                  <div class="col s12 m6 l4">
                    <div class="card">
                      <div class="card-image">
                        <img
                          class="materialboxed"
                          data-caption="<%= product.nombre %>  $<%= product.precio %>"
                          width="50"
                          src="<%= product.foto %>"
                          alt="<%= product.nombre %>"
                        />
                      </div>
                      <div class="card-content">
                        <p class="area"><%= product.nombre %></p>
                        <div class="row">
                          <div class="col s8">
                            <h2>$ <%= product.precio %></h2>
                          </div>
                          <div class="col s4">
                            <a
                              class="btn-floating btn-medium waves-effect waves-light green"
                              ><i class="material-icons"
                                >add_shopping_cart</i
                              ></a
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <% }); %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="carousel">
          <!-- <p>Stuff</p> -->

          <% arrayProducts.forEach(function(product) { %>

          <a class="carousel-item" href="#one!">
            <div class="col s12 m6 l4">
              <div class="card">
                <div class="card-image">
                  <img
                    class="materialboxed"
                    data-caption="<%= product.nombre %>  $<%= product.precio %>"
                    width="50"
                    src="<%= product.foto %>"
                    alt="<%= product.nombre %>"
                  />
                </div>
                <div class="card-content">
                  <p class="area"><%= product.nombre %></p>
                  <h4>$ <%= product.precio %></h4>
                </div>
              </div>
            </div>
          </a>
          <% }); %>
        </div>
      </div>

      <!-- productos -->
      <div class="container">
        <div class="divider"></div>
        <div class="section center">
          <h5>Lista de productos</h5>

          <!-- <p>Stuff</p> -->
          <a class="waves-effect waves-light btn modal-trigger" href="#modal"
            >Nuevo</a
          >
        </div>

        <!-- Modal Structure -->
        <div id="modal" class="modal">
          <div class="modal-content">
            <h4>Nuevo Producto</h4>
            <div class="row">
              <form class="col s12" method="POST" action="/">
                <div class="row">
                  <div class="input-field col s6">
                    <input
                      id="nombre"
                      type="text"
                      class="validate"
                      autocomplete="off"
                      name="nombre"
                    />
                    <label for="nombre">Nombre</label>
                  </div>
                  <div class="input-field col s6">
                    <select id="categoria" name="categoria">
                      <option value="" disabled selected>
                        Elige una opción ....
                      </option>
                      <option value="sol">Sol</option>
                      <option value="sombra">Sombra</option>
                      <option value="otro">Otro</option>
                    </select>
                    <label>Categoria</label>
                  </div>
                </div>
                <div class="row" action="/" method="POST">
                  <div class="input-field col s12 m6">
                    <input
                      id="precio"
                      type="number"
                      class="validate"
                      autocomplete="off"
                      name="precio"
                    />
                    <label for="precio">Precio</label>
                  </div>
                  <div class="input-field col s12 m6">
                    <input
                      id="stock"
                      type="number"
                      class="validate"
                      autocomplete="off"
                      name="stock"
                    />
                    <label for="stock">Stock</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <textarea
                      id="descripcion"
                      class="materialize-textarea"
                      name="descripcion"
                    ></textarea>
                    <label for="descripcion">Descripción</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input
                      id="imgURL"
                      type="text"
                      class="validate"
                      autocomplete="off"
                      name="foto"
                    />
                    <label for="img">Imgen URL</label>
                  </div>
                </div>
                
                <button type="submit" class="waves-effect btn waves-green" >
                  Guardar
                </button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <a
              href="#!"
              class="modal-close waves-effect btn waves-green btn-flat"
              >Cerrar</a
            >
          </div>
        </div>
      </div>

      <div class="container" id="productos">
        <table class="responsive-table striped highlight">
          <thead>
            <tr>
              <th>Foto</th>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Precio</th>
              <th>Fecha</th>
              <th>Stock</th>
              <th>Acciones</th>
            </tr>
          </thead>

          <tbody>
            <% arrayProducts.forEach(function(product) { %>
            <tr>
              <td>
                <img
                  class="materialboxed"
                  data-caption="<%= product.nombre %>"
                  width="50"
                  src="<%= product.foto %>"
                />
              </td>
              <td><%= product.nombre %></td>
              <td><%= product.descripcion %></td>
              <td><%= product.precio %></td>
              <td><%= product.createdAt %></td>
              <td><%= product.stock %></td>
              <td>
                <div class="col s12">
                  <form
                    method="POST"
                    action="/<%= product.id %>?_method=DELETE"
                    id="delete<%= product.id %>"
                  ></form>
                  <button
                    onclick="clicked('<%= product.id %>')"
                    class="btn-floating pulse red lighten-2"
                  >
                    <i class="material-icons">delete</i>
                  </button>
                </div>
                <div class="col s12">
                  <form action="/<%= product.id %>" method="GET">
                    <button
                      type="submit"
                      class="btn-floating pulse yellow lighten-2"
                    >
                      <i class="material-icons">edit </i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </main>
    <div class="fixed-action-btn">
      <a class="btn-floating btn-large purple" href='/dos'>
        <div class="row">
         
          <i class="large material-icons">shopping_cart</i>
        </div>
      </a>
    </div>
